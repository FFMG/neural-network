{
  "tasks": [
    { 
      "type": "cppbuild",
      "label": "C/C++: g++ build perfomance",
      "command": "/usr/bin/g++",
      "args": [
        "-pg",
        "-O2",
        "${workspaceFolder}/src/neuralnetwork/activation.cpp",
        "${workspaceFolder}/src/neuralnetwork/layer.cpp",
        "${workspaceFolder}/src/neuralnetwork/main.cpp",
        "${workspaceFolder}/src/neuralnetwork/neuralnetwork.cpp",
        "${workspaceFolder}/src/neuralnetwork/neuralnetworkserializer.cpp",        
        "${workspaceFolder}/src/neuralnetwork/neuron.cpp",
        "${workspaceFolder}/src/neuralnetwork/libraries/TinyJSON.cpp",
        "-o",
        "${fileDirname}/main"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },     
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build main",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-Wall",
        "-Wextra",
        "-Werror",
        "-Wunused-function",
        "-Wunused-value",
        "-O3",
        "${workspaceFolder}/src/neuralnetwork/activation.cpp",
        "${workspaceFolder}/src/neuralnetwork/layer.cpp",
        "${workspaceFolder}/src/neuralnetwork/main.cpp",
        "${workspaceFolder}/src/neuralnetwork/neuralnetwork.cpp",
        "${workspaceFolder}/src/neuralnetwork/neuralnetworkserializer.cpp",        
        "${workspaceFolder}/src/neuralnetwork/neuron.cpp",
        "${workspaceFolder}/src/neuralnetwork/libraries/TinyJSON.cpp",
        "-o",
        "${fileDirname}/main"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}